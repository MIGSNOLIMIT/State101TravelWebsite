  // TermsOfService model for editable heading and content
  model TermsOfService {
    id        Int    @id @default(autoincrement())
    heading   String?
    content   String?
    updatedAt DateTime @updatedAt
  }
  // Accreditation model for editable logo URLs
  model Accreditation {
    id        Int    @id @default(autoincrement())
    logoUrl   String
    name      String?
    updatedAt DateTime @updatedAt
  }
  // AboutPage model for editable hero banner
  model AboutPage {
    id           Int      @id @default(autoincrement())
    heroImageUrl String?
    updatedAt    DateTime @updatedAt
  }
