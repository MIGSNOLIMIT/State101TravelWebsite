generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TermsOfService {
  id        Int      @id @default(autoincrement())
  heading   String?
  content   String?
  updatedAt DateTime @updatedAt
}

model Accreditation {
  id        Int      @id @default(autoincrement())
  logoUrl   String
  name      String?
  updatedAt DateTime @updatedAt
}

model AboutPage {
  id           Int      @id @default(autoincrement())
  heroImageUrl String? @default(NULL)
  updatedAt    DateTime @updatedAt
}

model User {
  id         Int      @id @default(autoincrement())
  name       String?
  email      String   @unique
  password   String
  resetToken String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  role       String   @default("editor")
}

model Homepage {
  id                   Int      @id @default(autoincrement())
  heroTitle            String
  heroDesc             String
  heroImages           String[]
  aboutTitle           String?
  aboutDesc            String?
  servicesTitle        String?
  testimonialsTitle    String?
  testimonialsImages   String[]
  testimonialsVideoUrl String?
  updatedAt            DateTime @updatedAt
}

model Service {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  iconUrl     String?
  country     String
  buttonLabel String?
  buttonLink  String?
  updatedAt   DateTime @updatedAt
}

model ServicesPage {
  id           Int      @id @default(autoincrement())
  heroImageUrl String?
  heroTitle    String?
  heroDesc     String?
  sectionTitle String?
  sectionDesc  String?
  updatedAt    DateTime @updatedAt
}

model WhyChooseCard {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  iconUrl     String?
  color       String?
  updatedAt   DateTime @updatedAt
}

model TopBar {
  id      Int    @id @default(autoincrement())
  address String @default("")
  phone   String @default("")
  email   String @default("")
}

model Header {
  id      Int    @id @default(autoincrement())
  logoUrl String @default("")
}

model Footer {
  id          Int    @id @default(autoincrement())
  address     String @default("")
  phone       String @default("")
  email       String @default("")
  socialLinks String @default("[]")
  logoUrl     String @default("")
}

model Media {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  url         String
  type        String
  createdAt   DateTime @default(now())
}
